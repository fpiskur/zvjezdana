<li id="treatment-<%= treatment.id %>">
  <section class="treatment-info">
    <div class="treatment-date">
      <%= treatment.date.strftime("%d.%m.%Y.") %>
    </div>
    <div class="treatment-description">
      <%= treatment.description %>
    </div>
  </section>
  <section class="treatment-controls">
    <%= link_to "uredi", edit_treatment_path(treatment) %>
    <%= link_to "izbriši", treatment_path(treatment), data: {
          "turbo-method": :delete,
          "turbo-confirm": "Jeste li sigurni da želite izbrisati tretman?" } %>
  </section>
</li>