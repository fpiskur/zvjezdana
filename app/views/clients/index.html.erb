<div class="row client-list-header">
  <% if agent_mobile? %>
    <%= render 'new_client' %>
  <% end %>

  <div id="paginate-clients" class="col-md-4 col-md-offset-4">
    <%= will_paginate %>
  </div>
  <div id="search-clients" class="col-md-4">
    <%= form_with(url: clients_path, method: :get, data: {turbo_frame: "clients"}, html: { autocomplete: "off" }) do |form| %>

      <%#= form.label :query, "Pretraži:" %>
      <div>
        <%= form.text_field :query, placeholder: "Traži" %>

        <%#= form.submit 'Traži' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <% if !agent_mobile? %>
    <%= render 'new_client' %>
  <% end %>

  <div class="col-md-8">
    <ul class="clients">
      <% if @clients.any? %>
        <%= render @clients %>
      <% end %>
    </ul>
    <%= will_paginate %>
  </div>
</div>