<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= will_paginate %>
  </div>
  <div class="col-md-4">
    <%= form_with(url: clients_path, method: :get, data: {turbo_frame: "clients"}, html: { autocomplete: "off" }) do |form| %>

      <%#= form.label :query, "Pretraži:" %>
      <div>
        <%= form.text_field :query, placeholder: "Traži" %>

        <%#= form.submit 'Traži' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <aside class="col-md-4">
    <section>
      <h2>Novi klijent</h2>

      <%= form_with(model: @client, local: true, html: { autocomplete: "off" }, id: "add-client") do |f| %>
        
        <%= f.label :first_name, "Ime" %>
        <%= f.text_field :first_name, class: 'form-control' %>

        <%= f.label :last_name, "Prezime" %>
        <%= f.text_field :last_name, class: 'form-control' %>

        <%= f.label :phone_num, "Telefon" %>
        <%= f.text_field :phone_num, class: 'form-control' %>

        <%= f.label :comment, "Komentar" %>
        <%= f.text_area :comment, rows: 4, placeholder: "Komentar...", class: 'form-control' %>

        <%= f.submit "Dodaj klijenta", class: "btn btn-primary" %>
        
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <ul class="clients">
      <% if @clients.any? %>
        <%= render @clients %>
      <% end %>
    </ul>
    <%= will_paginate %>
  </div>
</div>